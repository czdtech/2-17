      <script>
    const fullscreenButton = document.getElementById("fullscreenButton");
    const gameCard = document.querySelector(".game-card");
    const dragonsweeperIframe = document.getElementById("dragonsweeper-iframe");

    function calculateScale() {

        const screenWidth = document.documentElement.clientWidth;
        const screenHeight = document.documentElement.clientHeight;

        const iframeWidth = screenHeight; 
        const iframeHeight = screenWidth; 

        const scaleX = screenWidth / iframeWidth;
        const scaleY = screenHeight / iframeHeight;

        
        let scale = Math.min(scaleX, scaleY);

        
        document.documentElement.style.setProperty('--scale', scale);

    }

    fullscreenButton.addEventListener("click", () => {
        if (!document.fullscreenElement) {
            
            gameCard.classList.add("fullscreen-enabled");

            calculateScale();

            if (gameCard.requestFullscreen) {
                gameCard.requestFullscreen();
            } else if (gameCard.mozRequestFullScreen) {
                gameCard.mozRequestFullScreen();
            } else if (gameCard.webkitRequestFullscreen) {
                gameCard.webkitRequestFullscreen();
            } else if (gameCard.msRequestFullscreen) {
                gameCard.msRequestFullscreen();
            }
        } else {
            
            if (document.exitFullscreen) {
                document.exitFullscreen();
                gameCard.classList.remove("fullscreen-enabled");
            } else if (document.mozCancelFullScreen) {
                document.mozCancelFullScreen();
                gameCard.classList.remove("fullscreen-enabled");
            } else if (document.webkitExitFullscreen) {
                document.webkitExitFullscreen();
                gameCard.classList.remove("fullscreen-enabled");
            } else if (document.msExitFullscreen) {
                document.msExitFullscreen();
                gameCard.classList.remove("fullscreen-enabled");
            }
        }
    });

    document.addEventListener('fullscreenchange', () => {
    if (!document.fullscreenElement) {
      gameCard.classList.remove("fullscreen-enabled");
    }else {
      calculateScale();
    }
    });

    document.addEventListener('mozfullscreenchange', () => {
        if (!document.mozFullScreen) {
            gameCard.classList.remove("fullscreen-enabled");
        } else {
            calculateScale();
        }
    });

    document.addEventListener('webkitfullscreenchange', () => {
        if (document.webkitIsFullScreen === false) {
            gameCard.classList.remove("fullscreen-enabled");
        } else {
            calculateScale();
        }
    });

    document.addEventListener('msfullscreenchange', () => {
        if (document.msFullscreenElement === null) {
            gameCard.classList.remove("fullscreen-enabled");
        } else {
            calculateScale();
        }
    });
      </script>
